{
    "name": "QRadar",
    "id": "qradar",
    "version": "1.1.0",
    "mapping": "QRadar Default Mappings",
    "types": [
        "alerts",
        "events",
        "webtx"
    ],
    "description": "This plugin is used to ingest data to QRadar platform. To access the plugin, you would need the credentials of QRadar platform .",
    "configuration": [
        {
            "label": "QRadar Server",
            "key": "qradar_server",
            "type": "text",
            "default": "",
            "mandatory": true,
            "description": "IP address/FQDN of QRadar server in which data will be ingested."
        },
        {
            "label": "QRadar Format",
            "key": "qradar_format",
            "type": "choice",
            "choices": [
                {
                    "key": "CEF",
                    "value": "CEF"
                }
            ],
            "default": "CEF",
            "mandatory": true,
            "description": "Data format required to ingest data."
        },
        {
            "label": "QRadar Protocol",
            "key": "qradar_protocol",
            "type": "choice",
            "choices": [
                {
                    "key": "TLS",
                    "value": "TLS"
                },
                {
                    "key": "UDP",
                    "value": "UDP"
                },
                {
                    "key": "TCP",
                    "value": "TCP"
                }
            ],
            "default": "UDP",
            "mandatory": true,
            "description": "Protocol to be used while ingesting data."
        },
        {
            "label": "QRadar Port",
            "key": "qradar_port",
            "type": "number",
            "default": "",
            "mandatory": true,
            "description": "QRadar port"
        },
        {
            "label": "QRadar Certificate",
            "key": "qradar_certificate",
            "type": "textarea",
            "default": "",
            "mandatory": false,
            "description": "certificate is required only for TLS protocol."
        }
    ]
}